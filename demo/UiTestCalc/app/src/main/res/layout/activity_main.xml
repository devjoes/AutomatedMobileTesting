<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_gravity="center">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtSum"
            android:focusable="false"
            android:textSize="60sp"
            android:textColor="@color/colorOrange" android:text="0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="sum"/>

    <GridLayout android:id="@+id/grid" android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtSum" app:layout_constraintStart_toStartOf="parent"
                android:columnCount="4" android:rowCount="4" android:onClick="onClick_Operation">

        <Button
                android:text="7"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum7" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="7"/>
        <Button
                android:text="8"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum8" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="8"/>
        <Button
                android:text="9"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum9" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="9"/>
        <Button
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnDivide" android:textSize="36sp" android:text="÷"
                android:background="@color/colorPurple" android:textColor="@color/colorWhite"
                android:onClick="onClick_Operation" android:contentDescription="divide"/>


        <Button
                android:text="4"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum4" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="4"/>
        <Button
                android:text="5"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum5" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="5"/>
        <Button
                android:text="6"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum6" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="6"/>
        <Button
                android:text="×"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnMultiply" android:textSize="36sp"
                android:background="@color/colorPurple" android:textColor="@color/colorWhite"
                android:onClick="onClick_Operation" android:contentDescription="multiply"/>


        <Button
                android:text="1"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum1" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="1"/>
        <Button
                android:text="2"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum2" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="2"/>

        <Button
                android:text="3"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum3" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="3"/>
        <Button
                android:text="+"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnPlus" android:textSize="36sp"
                android:background="@color/colorPurple" android:textColor="@color/colorWhite"
                android:onClick="onClick_Operation" android:contentDescription="plus"/>


        <Button
                android:text="C"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnClear" android:textSize="36sp"
                android:background="@color/colorPurple" android:textColor="@color/colorWhite"
                android:onClick="onClick_Clear" android:contentDescription="clear"/>
        <Button
                android:text="0"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnNum0" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="0"/>
        <Button
                android:text="·"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnDot" android:textSize="36sp"
                android:textColor="@color/colorWhite" android:background="@color/colorOrange"
                android:onClick="onClick_Operation" android:contentDescription="point"/>
        <Button
                android:text="-"
                android:layout_margin="3pt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnMinus" android:textSize="36sp"
                android:background="@color/colorPurple" android:textColor="@color/colorWhite"
                android:onClick="onClick_Operation" android:contentDescription="minus"/>
    </GridLayout>
    <Button
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:id="@+id/btnEquals" android:textSize="36sp"
            android:background="@color/colorPurple" android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/grid" app:layout_constraintStart_toStartOf="parent"
            android:onClick="onClick_Equals" android:contentDescription="equals"/>
</android.support.constraint.ConstraintLayout>